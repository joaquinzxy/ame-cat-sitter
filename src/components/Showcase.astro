<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sliderTrack = document.getElementById('slider-track');
    
    function checkSliderWidth() {
      const trackWidth = sliderTrack?.offsetWidth;
      const windowWidth = window.innerWidth;
      
      if (trackWidth && trackWidth < windowWidth * 3) {
        const slides = document.querySelectorAll('.slide');
        const slidesToAdd = Array.from(slides).slice(0, slides.length / 2);
        
        slidesToAdd.forEach(slide => {
          const clone = slide.cloneNode(true);
          sliderTrack?.appendChild(clone);
        });
      }
    }

    checkSliderWidth();
    window.addEventListener('resize', checkSliderWidth);

    function adjustAnimationSpeed() {
      const slides = document.querySelectorAll('.slide');
      const baseSpeed = 10;
      const speed = baseSpeed * (slides.length / 14);
      
      if(sliderTrack){
        sliderTrack.style.animationDuration = `${speed}s`;
      }
    }
    
    adjustAnimationSpeed();
  });
</script>

<style>

  .slider-container {
    overflow: hidden;
    position: relative;
    width: 100%;
  }
  
  .slider-track {
    display: flex;
    width: fit-content;
    animation: scroll 30s linear infinite;
  }
  
  .slide {
    height: 500px;
    margin: 0 8px;
    flex-shrink: 0;
  }
  
  .slide img {
    height: 100%;
